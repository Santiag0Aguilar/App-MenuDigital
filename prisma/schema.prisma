generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

/* ===== ENUMS ===== */

enum Role {
  ADMIN
  BUSINESS
}

enum Template {
  TEMPLATE_1
  TEMPLATE_2
}

/* ===== MODELS ===== */

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  businessName    String
  loyverseKeyHash String
  templateType    Template @default(TEMPLATE_1)
  primaryColor    String   @default("#000000")
  role            Role     @default(BUSINESS)
  createdAt       DateTime @default(now())
}