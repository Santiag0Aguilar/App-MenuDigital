generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

/* ===== ENUMS ===== */

enum Role {
  ADMIN
  BUSINESS
}

enum Template {
  TEMPLATE_1
  TEMPLATE_2
}

/* ===== MODELS ===== */

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  businessName    String
  loyverseKeyHash String
  templateType    Template @default(TEMPLATE_1)
  primaryColor    String   @default("#000000")
  role            Role     @default(BUSINESS)
  createdAt       DateTime @default(now())
  phone           String  @unique
  slug            String  @unique
  categories      Category[]
  products        Product[]
}

model Category {
  id         Int      @id @default(autoincrement())
  userId     Int
  externalId String   // id de Loyverse
  name       String
  color      String?  // GREY, BLUE, etc
  isActive   Boolean  @default(true)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  products   Product[]

  @@unique([userId, externalId]) 
}

model Product {
  id          Int      @id @default(autoincrement())
  userId      Int
  categoryId  Int
  externalId  String   // item.id de Loyverse

  name        String
  description String?
  imageUrl    String?
  handle      String?
  price       Float?
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])

  @@unique([userId, externalId])
}
 

 model AnalyticsEvent {
  id          Int      @id @default(autoincrement())

  // Tipo de evento
  type        String   // view_menu, view_product, add_to_cart

  // Negocio (dueño del menú)
  businessId  Int
  business    User     @relation(fields: [businessId], references: [id])

  // Menú público (slug)
  menuSlug    String

  // Producto (interno)
  productId   Int?
  product     Product? @relation(fields: [productId], references: [id])

  // Producto externo (Loyverse)
  externalProductId String?

  // Metadata útil
  price       Float?
  userAgent   String?
  ip          String?

  createdAt   DateTime @default(now())

  @@index([businessId])
  @@index([menuSlug])
  @@index([productId])
  @@index([type])
  @@index([createdAt])
}
