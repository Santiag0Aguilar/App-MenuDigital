generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

/* ===== ENUMS ===== */

enum Role {
  ADMIN
  BUSINESS
}

enum Template {
  TEMPLATE_1
  TEMPLATE_2
}

/* ===== MODELS ===== */

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  businessName    String
  loyverseKeyHash String
  templateType    Template @default(TEMPLATE_1)
  primaryColor    String   @default("#000000")
  role            Role     @default(BUSINESS)
  createdAt       DateTime @default(now())
  phone           String  @unique
  categories      Category[]
  products        Product[]
}

model Category {
  id         Int      @id @default(autoincrement())
  userId     Int
  externalId String   // id de Loyverse
  name       String
  color      String?  // GREY, BLUE, etc
  isActive   Boolean  @default(true)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  products   Product[]

  @@unique([userId, externalId]) 
}

model Product {
  id          Int      @id @default(autoincrement())
  userId      Int
  categoryId  Int
  externalId  String   // item.id de Loyverse

  name        String
  description String?
  imageUrl    String?
  handle      String?
  price       Float?
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])

  @@unique([userId, externalId])
}
 